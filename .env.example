# ================================
# Docker Compose Environment Variables
# ================================
# Copy this file to .env and update with your values

# ================================
# Database Configuration
# ================================
POSTGRES_SERVER=postgres
POSTGRES_USER=ecommerce_user
POSTGRES_PASSWORD=change-this-secure-password
POSTGRES_DB=ecommerce
POSTGRES_PORT=5432

# ================================
# Backend Configuration
# ================================
API_V1_STR=/api/v1
PROJECT_NAME=E-Commerce Recommendation System
VERSION=1.0.0
DESCRIPTION=Advanced Ecommerce Backend with Vector Search
ENVIRONMENT=development
DEBUG=False
BACKEND_PORT=8000

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
JWT_ISSUER=ecommerce-backend
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration - Frontend runs on port 5173
CORS_ORIGINS=["http://localhost:5173"]
BACKEND_CORS_ORIGINS=http://localhost:5173

# Initial Admin User (for first-time setup)
FIRST_SUPERUSER_USERNAME=admin
FIRST_SUPERUSER_EMAIL=admin@example.com
FIRST_SUPERUSER_PASSWORD=admin123

# File Upload & Pagination Settings
UPLOAD_FOLDER=static/uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ================================
# Frontend Configuration
# ================================
FRONTEND_PORT=5173

# ================================
# PgAdmin (Optional - use with --profile tools)
# ================================
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ================================
# Frontend Environment Variables (Optional)
# ================================
# The frontend has sensible defaults for POC.
# Override only if deploying to different environment.

# API Configuration - Do NOT include /api/v1 (env.ts adds it automatically)
# VITE_API_BASE_URL=http://localhost:8000
# VITE_API_VERSION=v1
